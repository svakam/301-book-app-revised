<!DOCTYPE html>
<html id="indexpage" lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- <link href="./styles/reset.css" type="text/css" rel="stylesheet" /> -->
  <link href="https://fonts.googleapis.com/css?family=Work+Sans&display=swap" rel="stylesheet">
  <link href="./styles/base.css" type="text/css" rel="stylesheet" />
  <link href="./styles/layout.css" type="text/css" rel="stylesheet" />
  <link href="./styles/modules.css" type="text/css" rel="stylesheet" />

  <title>Book App</title>
</head>

<body>
  <main class="indexh4">
    <h3 class="indexh4">Books Galore</h3>
    <% if (database) { %>
    <h5 id="indexcaption">Your Saved Books</h5>
    <% database.forEach(book => { %>
    <article>
      <img src="<%= book.image_url%>" alt="<%= book.title %>">
      <h2><%= book.title %></h2>
      <h4><%= book.author %></h4>
      <p class="book-summary"><%= book.summary %></p>
    </article>
    <% }) %>
    <% } %>
    <form action="/new" method="get">
      <button type="submit" name="submit">Find More Books</button>
    </form>
  </main>
</body>

</html>